{% extends 'base.html.twig' %}

{% block title 'Voir nos biens' %}

{% block stylesheets %}
    <style>
        .table { border-collapse: collapse; }
        .table th, td {
            border-bottom: 1px solid #ddd;
            width: 250px;
            text-align: left;
            align: left;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="jumbotron text-center">
        <h1> Nos biens</h1>

    </div>
    <table class = "table">
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Price</th>
        </tr>
        {% for x in data %}
            <tr>
                <td><a href="{{ path('property.show',{id: x.id }) }}">{{ x.title }}</a></td>
                <td>{{ x.description }}</td>
                <td>{{ x.surface }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}